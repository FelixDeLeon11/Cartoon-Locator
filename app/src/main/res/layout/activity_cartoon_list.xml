<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragments.CartoonListActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.factor.bouncy.BouncyRecyclerView
        android:id="@+id/mainShowList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:allow_drag_reorder="true"
        app:allow_item_swipe="false"
        app:recyclerview_damping_ratio="DAMPING_RATIO_NO_BOUNCY"
        app:recyclerview_fling_animation_size=".4"
        app:recyclerview_overscroll_animation_size=".4"
        app:recyclerview_stiffness="STIFFNESS_HIGH" />
</LinearLayout>

